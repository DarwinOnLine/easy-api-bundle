{{ route_name_prefix }}_{{ entity_route_name }}_get:
    path: /{{ entity_url_name }}/{id}
    defaults: { _controller: {{ bundle_name }}:{{ context_name }}\{{ entity_name }}:get }
    methods: GET
    requirements:
        id: '\d+'

